<odoo>
  <data>
    <record id="view_crm_lead_form_inherit_matrica" model="ir.ui.view">
      <field name="name">crm.lead.form.inherit.matrica</field>
      <field name="model">crm.lead</field>
      <field name="inherit_id" ref="crm.crm_lead_view_form"/>
      <field name="arch" type="xml">
          
        <xpath expr="//group[@name='lead_partner']/field[@name='partner_id']" position="after">
          <field name="x_pelanggan_baru"/>
          <field name="x_segment_pelanggan"/>
          <field name="x_segment_pelanggan_lainnya"
            invisible="x_segment_pelanggan != 'swasta'"
            required="x_segment_pelanggan == 'swasta'"/>
          <field name="x_segment_product_id"/>
        </xpath>

        <xpath expr="//group[@name='opportunity_partner']/field[@name='partner_id']" position="after">
          <field name="x_pelanggan_baru"/>
          <field name="x_segment_pelanggan"/>
          <field name="x_segment_pelanggan_lainnya"
            invisible="x_segment_pelanggan != 'swasta'"
            required="x_segment_pelanggan == 'swasta'"/>
          <field name="x_segment_product_id"/>
        </xpath>

        <xpath expr="//notebook" position="inside">
          <page string="Task Progress">
            <field name="x_task_progress_ids">
              <tree editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="deadline"/>
                <field name="status"/>
              </tree>
            </field>
          </page>
        </xpath>

      </field>
    </record>
  </data>
</odoo>